{
  "extends": "@repo/typescript-config/nestjs.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "composite": true,
    "preserveWatchOutput": true,
    "baseUrl": ".",
